@model IEnumerable<ABCRetailers.Models.Product>

@{
    ViewData["Title"] = "Products";
}

<h2>Products</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Description</td>
                <td>@product.Price.ToString("C")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@product.ProductId" class="btn btn-info">Details</a>
                    <form asp-action="AddToCart" asp-controller="Cart" method="post" style="display:inline;">
                        <input type="hidden" name="productId" value="@product.ProductId" />
                        <input type="hidden" name="userId" value="1" /> <!-- Replace with dynamic user ID -->
                        <input type="hidden" name="quantity" value="1" />
                        <button type="submit" class="btn btn-primary">Add to Cart</button>
                    </form>

                </td>
            </tr>
        }
    </tbody>
</table>
